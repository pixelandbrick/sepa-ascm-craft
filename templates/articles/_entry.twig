{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-[#1D1D1D]'
  }) }}
{% endblock %}

{% block content %}
{% block header %}{% include '_partials/header.twig' %}{% endblock %}
<div class="bg-white">
  <div class="max-w-screen-xl min-w-screen-xl mx-auto pt-[60px] pb-[100px] px-6 md:px-0">
    <div class="max-w-[828px] md:min-w-[828px] mx-auto">
      <div class="grid grid-cols-1 md:flex">
        <div class="md:flex md:flex-col grow">
          <div class="grow">
            <div class="pt-[9px] pb-[8px] px-[24px] w-min bg-shaving font-extrabold uppercase text-white text-nowrap mb-6 md:mb-0">{{entry.articleCategory.one}}</div>
          </div>
          <div class="place-items-end">
            <p class="h3 -mb-2 font-bold text-ficus">{{entry.postDate|date('F j, Y')}}</p>
            <h2 class="-mb-2">{{entry.title}}</h2>
          </div>
        </div>
        <div class="order-first -z-0 md:order-none md:mx-[19px] h-[238px] w-full md:w-[238px] shrink-0 drop-shadow-2xl bg-no-repeat mb-6 md:mb-0" style="background-image: url({{entry.insetImage.one.getUrl('headshots')}})"></div>
      </div>
      <div class="h-[35px]">&nbsp;</div>
      <div><p class="text-lg">
      {{ entry.body }}
      </p></div>
      <div class="mx-auto mt-[60px] mb-[80px] w-[60px] border-b-[5px] border-[#006B36]">&nbsp;</div><!-- color block -->
    </div>
  </div>
</div>
{% block footer %}{% include '_partials/footer.twig' %}{% endblock %}
{% endblock %}
