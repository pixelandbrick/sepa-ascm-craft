{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-[#1D1D1D]'
  }) }}
{% endblock %}

{% block content %}
{% block header %}{% include '_partials/header.twig' %}{% endblock %}
<div class="bg-white">
  <div class="max-w-screen-xl min-w-screen-xl mx-auto pt-[60px] pb-[100px]">
    <div class="mt-[50px]">
      <h2 class="text-[38px] leading-10 mb-[30px]">Articles</h2>
      <div class="grid grid-cols-4 gap-[20px] justify-between">
        {% set entries = craft.entries.section('articles').all() %}
        {% for entry in entries %}
        <a href="{{entry.url}}" class="mb-[30px]">
          <div class="mx-[19px] h-[260px] w-[260px] drop-shadow-2xl" style="background-image: url({{entry.insetImage.one.getUrl('headshots')}})"></div>
          <p class="pt-[20px] w-[298px] font-light text-center text-[24px]">{{entry.title}}</p>
        </a>
        {% endfor %}
      </div>
      <div class="mx-auto mt-[80px] w-[60px] border-b-[5px] border-[#006B36]">&nbsp;</div><!-- color block -->
    </div>
  </div>
</div>
{% block footer %}{% include '_partials/footer.twig' %}{% endblock %}
{% endblock %}
