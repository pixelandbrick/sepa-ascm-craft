{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-[#1D1D1D]'
  }) }}
{% endblock %}

{% block content %}
{% block header %}{% include '_partials/header.twig' %}{% endblock %}
<div class="bg-white">
  <div class="max-w-screen-xl min-w-screen-xl mx-auto md:pt-[60px] pb-[100px] px-6">
    <div class="mt-[30px] md:mt-[50px]">
      <h2 class="text-[28px] md:text-[38px] leading-10 mb-[30px]">Articles</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-[20px] md:gap-[100px] justify-between place-items-center md:place-items-start">
        {% set entries = craft.entries.section('articles').orderBy('postDate ASC').all() %}
        {% for entry in entries %}
        <a href="{{entry.url}}" class="mb-[30px]">
          <div class="h-[260px] bg-cover w-full drop-shadow-2xl" style="background-image: url({{entry.insetImage.one.getUrl()}})"></div>
          <p class="pt-[20px] w-[298px] text-center h2 hover:no-underline text-wolf">{{entry.title}}</p>
        </a>
        {% endfor %}
      </div>
      <div class="mx-auto mt-[80px] w-[60px] border-b-[5px] border-ficus">&nbsp;</div><!-- color block -->
    </div>
  </div>
</div>
{% block footer %}{% include '_partials/footer.twig' %}{% endblock %}
{% endblock %}
