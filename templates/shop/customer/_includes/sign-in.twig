<form method="post" action="" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('users/login') }}
  {{ redirectInput(redirectUrl ?? '') }}

  <div class="field mt-3">
    <label for="loginName">
      {{- 'Email / Username'|t -}}
    </label>
    <div class="mt-1">
      {{ input('text', 'loginName', craft.app.user.getRememberedUsername(), {
        id: 'loginName',
        placeholder: 'email@site.com',
        required: true,
        class: [
          'appearance-none',
          'block',
          'w-full',
          'px-3',
          'py-2',
          'border',
          'border-gray-300',
          'rounded-md',
          'shadow-sm',
          'placeholder-gray-400',
          'focus:outline-none',
          'sm:text-sm',
          'focus:ring-ficus',
          'focus:border-ficus',
        ]
      }) }}
    </div>
  </div>

  <div class="field mt-3">
    <label for="loginPassword">
      {{- 'Password'|t -}}
    </label>
    {{ input('password', 'password', null, {
      id: 'loginPassword',
      class: ['mt-1', 'w-full', 'border border-gray-300 hover:border-gray-500 px-4 py-2 leading-tight rounded']
    }) }}
  </div>

  <div class="field mt-3">
    <label>
      {{ input('checkbox', 'rememberMe', 1) }}
      {{ 'Remember me'|t }}
    </label>
  </div>

  <div class="mt-3 flex justify-between items-center">
    <div>
      <a href="{{ url('/shop/customer/forgot-password') }}" class="text-[#006B36] hover:text-[#006B36]">
        {{- 'Forgot your password?'|t -}}
      </a>
    </div>
    <div>
      {{ tag('button', {
        type: 'submit',
        class: 'cursor-pointer rounded px-4 py-2 inline-block bg-[#006B36] hover:bg-[#006B36] text-white hover:text-white',
        text: 'Sign in'|t
      }) }}
    </div>
  </div>
</form>
