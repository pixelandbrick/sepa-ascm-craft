{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-[#1D1D1D]'
  }) }}
{% endblock %}

{% block content %}
{% block header %}{% include '_partials/header.twig' %}{% endblock %}

<div class="bg-white">
  <div class="max-w-screen-xl min-w-screen-xl mx-auto py-[100px] px-6 md:px-0">
  {% for entry in craft.entries().section('Meetings').orderBy('meetingDate ASC') %}
  {% if today <= entry.meetingDate %}
    <div class="flex flex-row">
      <div class="bg-errigal w-full pl-[40px] pr-[80px] py-[35px] mb-[30px] rounded border-t-[5px] border-ficus">
        <p class="mb-[10px] text-[24px] text-wolf">{{entry.title}}</p>
        <p class="mb-[10px] font-bold text-ficus">{{entry.meetingDate|date('F j, Y, g:i a T')}}</p>
        <p class="font-light text-wolf">{{entry.meetingDescription|striptags|truncate(255,'...')}}</p>
        <div class="mt-[35px] flex gap-[25px]">
          {% if entry.meetingRegLink %}<a href="{{entry.meetingRegLink}}" class="custom-button h-max w-max bg-[#82C341] pt-[9px] pb-[11px] pl-[20px] pr-[20px] text-white text-lg font-semibold">Register</a>{% endif %}
        </div>
      </div>
    </div>
  {% endif %}
  {% endfor %}
  </div>
</div>
{% block footer %}{% include '_partials/footer.twig' %}{% endblock %}
{% endblock %}
