{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-[#1D1D1D]'
  }) }}
{% endblock %}

{% set start = now|atom %}

{% block content %}
{% block header %}{% include '_partials/header.twig' %}{% endblock %}
{% block hero %}{% include '_partials/hero.twig' %}{% endblock %}
{% set mainFeature = homepageFeatureItems.mainFeature.one() %}
<div class="bg-white">
  <div class="max-w-screen-xl min-w-screen-xl mx-auto px-6 md:px-4">
    {% if mainFeature %}
    {% if mainFeature.startDate > "now"|date("m/d/Y") %}
    <div class="grid grid-cols-1 md:flex gap-0 mt-[60px]">
      <div class="rounded-l w-full min-w-[280px] h-[200px] md:h-auto bg-cover bg-no-repeat bg-center bg-shaving" style="background-image: url({% if mainFeature.featureImage %}{{mainFeature.featureImage.one().url}}{% endif %})"></div>
      <div class="bg-errigal w-full pl-[40px] pb-[40px] rounded-b md:rounded-r">
        <div><!-- text -->
          <h2>{{mainFeature.title}}</h2>
          <p class="text-lg font-bold text-ficus">{{mainFeature.startDate|date('F j, Y – g:i a T')}}</p>
          <div class="max-w-[800px] pr-4"><p>{{mainFeature.description|striptags|truncate(255,'...')}}</p></div>
        </div>
        <div class="flex gap-[25px]">
          <a href={{"/2025-summer-networking-educational-opportunities-from-ima/" ~ mainFeature.slug}} class="h-max w-max bg-money pt-[9px] pb-[11px] pl-[20px] pr-[20px] text-white text-lg font-semibold hover:no-underline">Learn&nbsp;More</a>
        </div>
      </div>
    </div>
    {% endif %}
    {% endif %}
  <div class="mt-[100px] grid grid-cols-1 md:grid-cols-3 gap-8">
  
  {% for event in craft.events.events().startDate(">= #{start}").orderBy('startDate asc').all() %}
    {% if loop.index < 4 %}
    <div class="flex flex-col mb-12 md:mb-0">
        {% if event.type.name != 'Membership' %}
          {% set theProduct = craft.entries().slug(event.type.handle).one() %}
          {% if event.type.name != 'Meeting' and theProduct.courseHero %}
          <div class="w-full h-[280px] bg-contain bg-no-repeat bg-center" style="background-image: url({{theProduct.courseHero.one().url}})">
          {% elseif event.featureImage.one() %}
          <div class="w-full h-[280px] bg-contain bg-no-repeat bg-center" style="background-image: url({{event.featureImage.one().url}})">
          {% else %}
          <div class="w-full h-[280px] bg-contain bg-no-repeat bg-center" style="background-image: url({{"/volumes/jpg/test-sq.jpg"}})">
          {% endif %}
          </div>
          <div class="mt-[10px] w-11/12 grow">
            <h2>{{event.title}}</h2>
            <h3 class="text-ficus">
              {% if event.type.name != 'Meeting' %}{{"Starts " ~ event.getSessions().one().startDate|date('F j')}}
              {% elseif event.type.name == 'Meeting' and event.getSessions().all()|length > 1 %}{{ "Multiple Dates" }}
              {% else %}{{event.getSessions().one().startDate|date('F j, Y – g:i a T')}}
              {% endif %}
            </h3>
            <br />
            <p class="text-lg">
              {% if event.summary %}
                {{event.summary}}</p>
              {% else %}
                {{event.description|striptags|truncate(255,'...')}}</p>
              {% endif %}
          </div>
          <div class="mt-[30px]"><a href=
            {% if event.type.name != 'Meeting' and event.type.name != 'Membership' %}{{"/education/" ~ event.type.handle }}
            {% else %}{{"/meetings/" ~ event.slug}}
            {% endif %}
          class="primaryButton">Learn More</a></div>
      {% endif %}
    </div>
    {% endif %}
  {% endfor %}
  </div>
  <div class="my-[100px]">
    <h4 class="text-lg leading-[38px]">Welcome to Southeastern 
    Pennsylvania Alliance Chapter (SEPA), we are excited that you decided to join our chapter. In addition to the values 
    and rewards you might receive from ASCM, our members will enjoy the following additional values.</h4>
    <ul class="text-lg leading-[38px]">
      <li>Attendance to our annual Top Management Night, with the event offering appetizers, door prizes with a cash bar. 
      Don’t miss out on a great networking opportunity!</li>
      <li>Attendance to our monthly PDM meetings for members of SEPA, will receive a discounted price registration.</li>
      <li>Job posting listed on our website as well as blast E-Mail communication.</li>
      <li>Cost savings for members of SEPA, when registering for any educational classes the chapter is offering.</li>
      <li>Expanded number and frequency of educational classes and Supply Chain professional certificates.</li>
      <li>Opportunity to participate in the annual Janet Hillier Education Scholarship. Applicable to undergraduate students only.</li>
      <li>York College Students in the Operations & Supply Chain curriculum are eligible to apply for the annual endowment the college presents to attend either a CPIM or CSCP class including an exam voucher.</p>
    </ul>
  </div>
  <div class="mx-auto mb-[80px] w-[60px] border-b-[5px] border-ficus">&nbsp;</div><!-- color block -->
</div>
</div>
{% block apics_cta %}{% include '_partials/apics_cta.twig' %}{% endblock %}
{% block footer %}{% include '_partials/footer.twig' %}{% endblock %}
{% endblock %}
