{% extends "_layouts/default.twig" %}

{% block bodyTag %}
  {{ parent()|attr({
    class: 'bg-[#1D1D1D]'
  }) }}
{% endblock %}

{% block content %}
{% block header %}{% include '_partials/header.twig' %}{% endblock %}
<div class="bg-white">
  <div class="max-w-screen-xl min-w-screen-xl mx-auto pt-[60px] pb-[100px] px-6 md:px-0">
  <div class="grid md:flex justify-between">
    <div>
      <div class="max-w-[582px]"><p class="text-[20px] font-light leading-[38px] text-[#292929]">{{craft.app.globals().getSetByHandle('aboutAscmSepa').description|striptags}}</p></div>
      <div class="mx-auto mt-[60px] w-[60px] border-b-[5px] border-[#006B36]">&nbsp;</div><!-- color block -->
    </div>
    <div class="order-first md:order-none w-full md:w-[616px] h-[366px] md:h-[466px] bg-contain bg-no-repeat" style="background-image: url({{craft.app.globals().getSetByHandle('aboutAscmSepa').featureImage.one().url}})"></div>
  </div>
  {% block board %}{% include '_partials/board.twig' %}{% endblock %}
  </div>
</div>
{% block footer %}{% include '_partials/footer.twig' %}{% endblock %}
{% endblock %}
