{
  "autoload": {
    "psr-4": {
      "modules\\sitemodule\\": "modules/sitemodule/src/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "treeware/plant": false,
      "yiisoft/yii2-composer": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    },
    "sort-packages": true
  },
  "require": {
    "bymayo/commerce-widgets": "5.0.1",
    "craftcms/ckeditor": "4.6.0",
    "craftcms/cms": "5.6.13",
    "craftcms/commerce": "5.3.7",
    "craftcms/commerce-paypal-checkout": "3.0.1",
    "craftcms/commerce-stripe": "5.0.7",
    "craftcms/redactor": "4.2.0",
    "craftcms/webhooks": "3.1.0",
    "mmikkel/cp-field-inspect": "2.0.4",
    "nystudio107/craft-retour": "5.0.7",
    "nystudio107/craft-seomatic": "5.1.2",
    "nystudio107/craft-vite": "5.0.1",
    "putyourlightson/craft-sendgrid": "3.0.0",
    "spacecatninja/imager-x": "5.0.2",
    "verbb/events": "3.0.0-beta.2",
    "verbb/field-manager": "4.0.3",
    "verbb/formie": "3.0.22",
    "verbb/hyper": "2.2.3",
    "verbb/super-table": "4.0.3",
    "vlucas/phpdotenv": "^5.4.0",
    "youandmedigital/breadcrumb": "3.0.0"
  },
  "require-dev": {
    "nystudio107/craft-autocomplete": "^1.10.0",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "scripts": {
    "craft-update": [
      "@pre-craft-update",
      "@post-craft-update"
    ],
    "pre-craft-update": [],
    "post-craft-update": [
      "@php craft install/check && php craft up --interactive=0 || exit 0",
      "@php craft install/check && php craft clear-caches/all --interactive=0 || exit 0",
      "@php craft install/check && php craft invalidate-tags/all --interactive=0 || return 0"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php craft setup/welcome"
    ],
    "pre-update-cmd": "@pre-craft-update",
    "pre-install-cmd": "@pre-craft-update",
    "post-update-cmd": "@post-craft-update",
    "post-install-cmd": "@post-craft-update"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.craftcms.com",
      "canonical": false
    }
  ]
}